{
  "name": "warehouse-accounting",
  "version": "1.0.0",
  "description": "仓储记账软件 - 商人端和员工端",
  "author": "仓储记账系统开发团队",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-only": "electron .",
    "electron-pack": "electron-builder",
    "build": "react-scripts build",
    "start": "react-scripts start",
    "start-browser": "react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "antd": "^5.12.8",
    "dayjs": "^1.11.10",
    "bcryptjs": "^2.4.3",
    "@ant-design/icons": "^5.2.6"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^7.6.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.warehouse.accounting",
    "productName": "仓储记账系统",
    "directories": {
      "output": "release"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
